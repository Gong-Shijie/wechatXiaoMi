/* miniprogram/pages/note/note.wxss */
 .content {
   display: inline;
   justify-content: center;
 }

.new-content {
  display: flex;
  flex-direction: row;
}

 .new-button {
   color: white;
   background-color: #2c2c2c;
   width: 100rpx;
   min-height: 100rpx;
   font-size: xx-large;
   border-radius: 50rpx;
   margin-right: 20rpx;
   margin-bottom: 20rpx;
   text-align: center;
   line-height: 70rpx;
 }

 .note { 
   text-align: left;
   font-size: small;
   width: 95%;
   height: 200rpx;
   background-color: #FFFFFF;
   margin: 20rpx;
   border-radius: 20rpx;
 }
 .book-array {
   height: 80rpx;
   background-color: gray;
   color: white; 
 }

 .book-inside {
   margin-left: 20rpx;
   margin-top: 20rpx;
   height: 60rpx;
 }